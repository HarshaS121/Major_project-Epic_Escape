<style>
  /* Optimized Search Styling */
  .search-btn {
    background-color: #fe424d !important;
    color: #fff !important;
    border-radius: 25rem !important;
    padding: 0.5rem 0.5rem;
    border: none;
  }
  
  .search-input {
    border-radius: 25rem !important;
    padding: 0.5rem 1.5rem !important;
    font-size: 0.9rem;
    min-width: 250px;
  }

  .search-btn:hover {
    background-color: #e33640 !important;
    opacity: 0.9;
  }
</style>

<div id="mobile-search-container" class="d-md-none">
  <form action="/listings" method="GET">
    <input class="form-control" type="search" name="q" placeholder="Start your search">
    <button class="btn-search-mobile" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
</div>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav mx-auto d-none d-md-flex">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input class="form-control search-input me-2" type="search" name="q" placeholder="Search destination">
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> 
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add your home</a>
        <% if(!currUser){ %>
          <a class="nav-link" href="/signup">Signup</a>
          <a class="nav-link" href="/login">Login</a>
        <% } else { %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<nav class="bottom-nav d-md-none">
  <a href="/listings" class="bottom-nav-item active">
    <i class="fa-solid fa-magnifying-glass"></i>
    <span>Explore</span>
  </a>
  <a href="/wishlists" class="bottom-nav-item">
    <i class="fa-regular fa-heart"></i>
    <span>Wishlists</span>
  </a>
  <% if(!currUser){ %>
    <a href="/login" class="bottom-nav-item">
      <i class="fa-regular fa-circle-user"></i>
      <span>Log in</span>
    </a>
  <% } else { %>
    <a href="/profile" class="bottom-nav-item">
      <i class="fa-regular fa-circle-user"></i>
      <span>Profile</span>
    </a>
  <% } %>
</nav>