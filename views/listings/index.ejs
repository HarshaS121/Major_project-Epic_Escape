<% layout("/layouts/boilerplate") %>
<body>

  <style>
  /* Container for the whole bar */
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 2rem; /* Adds even space between icons */
    padding-top: 1rem;
  }

  /* Individual Filter Item */
  .filter {
    text-align: center;
    margin-right: 0; /* Handled by gap above */
    opacity: 0.7;
    text-decoration: none; /* REMOVES UNDERLINE */
    color: black;          /* REMOVES BLUE COLOR */
    cursor: pointer;
    border-bottom: 2px solid transparent; /* Invisible border for layout stability */
    transition: all 0.3s ease;
    padding-bottom: 0.2rem;
  }

  /* Icon size */
  .filter i {
    font-size: 1.2rem;
    margin-bottom: 0.2rem;
  }

  /* Text size */
  .filter p {
    font-size: 0.8rem;
    margin: 0; /* Resets default p margin */
  }

  /* Hover Effect: Darker and Bottom Border */
  .filter:hover {
    opacity: 1;
    border-bottom: 2px solid black; /* Creates the line effect */
  }

  /* Tax Toggle Switch Styling */
  .tax-toggle {
    border: 1px solid #ddd; /* Lighter border */
    border-radius: 1rem;
    height: 3rem;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    margin-left: auto; /* Pushes the toggle to the far right */
    box-shadow: 2px 2px 5px rgba(0,0,0,0.1); /* Adds a subtle shadow */
  }
  
  /* Make tax toggle responsive: Hide on very small screens if needed */
  @media (max-width: 768px) {
    .tax-toggle {
      margin-left: 0;
      margin-top: 1rem;
    }
  }
</style>
  <!-- <h1>All Listings</h1> -->
   <div id="filters">
      <a href="/listings?category=Trending"class=filter>
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>

      <a href="/listings?category=Rooms" class=filter>
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>

      <a href="/listings?category=Iconic Cities" class=filter>
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </a>

      <a href="/listings?category=Mountains" class=filter>
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>

      <a href="/listings?category=Castles" class=filter>
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>

      <a href="/listings?category=Amazing Pools" class=filter>
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>

      <a href="/listings?category=Camping" class=filter>
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </a>

      <a href="/listings?category=Frams" class=filter>
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </a>

      <a href="/listings?category=Arctic" class=filter>
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
      
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
          </div>
      </div>
   </div>


  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <div class="col mb-4"> 
        <a href="/listings/<%= listing._id %>" class="card-link">
          <div class="card h-100">
                 <img src="<%= (listing.image && listing.image.url) ? listing.image.url : listing.image %>"
                      class="card-img-top" 
                      alt="listing_image"
                      style="height: 16rem; object-fit: cover;">
                   <div class="card-img-overlay"></div>
            <div class="card-img-overlay"></div> <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tax-switch"> &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div> </body>

  <script>
    let taxtoggle=document.getElementById("switchCheckDefault")
    taxtoggle.addEventListener("click",()=>{
    let taxSwitch=document.getElementsByClassName("tax-switch")
    for(tax of taxSwitch){
      if(tax.style.display!="inline"){
        tax.style.display="inline";
      }else{
        tax.style.display="none";
      }
    }
    })
  </script>